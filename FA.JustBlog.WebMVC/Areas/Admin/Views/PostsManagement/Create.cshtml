@model FA.JustBlog.WebMVC.ViewModels.PostViewModel

@{
    ViewBag.Title = "Create Post";
}

<h2 class="text-center">Create Post</h2>
<h3 class="text-success time-hide">@TempData["Message"]</h3>

@using (Html.BeginForm())
