                    <div class="checkbox">
                        @Html.EditorFor(model => model.Published)
                        @Html.ValidationMessageFor(model => model.Published, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.PostContent, htmlAttributes: new { @class = "control-label" })
                <div id="editor">
                    <textarea class="form-control" name="PostContent" id="ckeditor"></textarea>
                    @Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary mr-3" })
            <button type="submit" class="btn btn-info">
                Create
            </button>
        </div>
    </div>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>

